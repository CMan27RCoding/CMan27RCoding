import pygame
pygame.init()

screen = pygame.display.set_mode((500, 410))
pygame.display.set_caption("Blue screen")

blue = (50, 100, 255)
screen.fill(blue)

run = True
while run:
    pygame.display.update()
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False
            break

pygame.quit()



